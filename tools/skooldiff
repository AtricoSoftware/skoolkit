#!/usr/bin/env bash
set -e # Abort on errors

. $(dirname $0)/ddiffs-functions

usage() {
  cat <<EOF
Usage: $(basename $0) [-c] $GAMES

  Compares the original skool file for a game with one generated from a skool
  file template (or control file if -c is used) and a snapshot.
EOF
  exit 1
}

if [ -z "$SKOOLKIT_HOME" ]; then
  echo "Error: SKOOLKIT_HOME not defined."
  exit 1
fi
if [ ! -d "$SKOOLKIT_HOME" ]; then
  echo "Error: directory not found: $SKOOLKIT_HOME"
  exit 1
fi

ctl=0
[[ $1 == -c ]] && ctl=1 && shift

GAME=$1
read_ddiffsrc $GAME

[[ $GAME = rom ]] && SNA2SKOOL_OPTS="-o 0 -H"
SKOOL=$DHOME/sources/$GAME.skool
SKOOL2=$GAME.skool

if ((ctl == 1)); then
  $SKOOLKIT_HOME/skool2ctl.py $SKOOL | $SKOOLKIT_HOME/sna2skool.py $SNA2SKOOL_OPTS -c - $SNAPSHOT > $SKOOL2
else
  $SKOOLKIT_HOME/skool2sft.py $SKOOL | $SKOOLKIT_HOME/sna2skool.py $SNA2SKOOL_OPTS -T - $SNAPSHOT > $SKOOL2
fi 2>/dev/null

colordiff -Bu $SKOOL $SKOOL2 && echo "No differences" 1>&2
